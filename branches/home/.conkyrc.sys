# of io
template1 ${if_match ${top io_perc \1} > 0}${color\2} ${top_io pid \1}.${top_io name \1} ${top io_read \1} ${top io_write \1}${else}${voffset -14}${endif}
# mem
template2 ${color\2}${top_mem pid \1}.${top_mem name \1} ${top_mem mem \1} ${top_mem mem_vsize \1}

# cpu
template3 ${if_match ${top cpu \1} > 0}${color\2}${top pid \1}.${top name \1} ${top cpu \1}${endif}

# time
template4 ${color\2}${top_time pid \1}.${top_time name \1} ${top_time time \1}
#${goto 0}${cpugraph cpu1 20,0 00ff00 ff0000 -t}${voffset -10}
#${goto 0}${cpugraph cpu2 20,0 ff0000 00ff00 -t}${voffset -10}
TEXT
${goto 150}${freq_g 1}GHz ${cpu cpu1}%
${goto 150}${freq_g 2}GHz ${cpu cpu2}%

${voffset 100}$memperc%
${voffset 120}${diskio sda}${voffset -5}${goto 0}${diskiograph /dev/sda 20,0 00ff00 ff0000 -t}
$uptime_short${if_empty $battery_time}${else}${color8}${font Webdings:size=12}~${font}${color}$battery_time $battery_bar${endif}
